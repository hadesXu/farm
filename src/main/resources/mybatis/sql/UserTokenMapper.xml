<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hades.farm.core.data.mapper.UserTokenMapper">
    <resultMap id="userToken" type="UserToken">
        <result column="user_id" property="userId"/>
        <result column="token" property="token"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insertUserToken" parameterType="UserToken">
        INSERT INTO user_token (user_id, token, update_time) VALUES (#{userId}, #{token}, now())
    </insert>

    <update id="updateUserToken">
        UPDATE user_token SET token=#{token}, update_time=now() WHERE user_id=#{userId}
    </update>

    <select id="getUserTokenById" resultMap="userToken">
        SELECT user_id, token, update_time FROM user_token WHERE user_id=#{userId}
    </select>

    <delete id="deleteUserToken">
        DELETE FROM user_token WHERE user_id=#{userId}
    </delete>

</mapper>